{
  "build": {
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/healthz",
    "healthcheckTimeout": 100,
    "startCommand": "sh -c 'uvicorn app:app --host 0.0.0.0 --port ${PORT:-8000}'"
  },
  "envVars": {
    "DATABASE_URL": {
      "required": true
    },
    "SUPABASE_SSLMODE": {
      "required": false,
      "value": "require"
    }
  }
}


